<div class="listing">
  {{#if answerQuestion}}
    <h3>Answer a Question</h3>
    <form>
      <div class="form-group">
        <p>What is your name? {{input value=username id="username"}}</p>
      </div>
      <div class="form-group">
        <p>Your Answer: </p>
        {{tinymce-editor options=options value=text id="text"}}
      </div>
      <button {{action 'saveAnswer'}} class="button">Save Answer</button>
    </form>
  {{else}}
    <button {{action 'showAnswerForm'}} class="button">Answer Question</button>
  {{/if}}
</div>
